<div id="page-content-wrapper" class="p-9">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- My Account Page Start -->
                <div class="myaccount-page-wrapper">
                    <!-- My Account Tab Menu Start -->
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="myaccount-tab-menu nav" role="tablist">
                               <a href="/info"  ><i class="fa fa-dashboard"></i>
                                    Thông Tin cá Nhân</a>
                                    <a href="/tindang"  ><i class="fa fa-upload"></i> Tạo Tin Đăng</a>

                                    <a href="/info/tindadang"  class="active"><i class="fa fa-cart-arrow-down"></i> Tin Đang Đăng</a>

                                    <a href="/info/tinchoduyet"><i class="fa fa-cloud-download"></i> Tin Chờ Duyệt</a>
    
                                    <a href="/info/tindaluu"   ><i class="fa fa-credit-card"></i> Tin Đã Lưu</a>
    
                                    <a href="/usertheodois"><i class="fa fa-map-marker"></i> Người Theo Dõi</a>
    
                                    <a href="/mails_den"><i class="fa fa-user"></i> Tin Nhắn</a>
    
                                    <a href="/signout"><i class="fa fa-sign-out"></i> Logout</a>
                            </div>
                        </div>
                        <!-- My Account Tab Menu End -->

                        <!-- My Account Tab Content Start -->
                        <div class="col-lg-9 mt-5 mt-lg-0">
                            <div class="tab-content" id="myaccountContent">
                                <!-- Single Tab Content Start -->
                                <div class="tab-pane fade show active" id="dashboad" role="tabpanel">
                                <div class="myaccount-content">
                                <h3>Tin Đang Đăng</h3>

                                <div class="myaccount-table table-responsive text-center">
                                    <table class="table table-bordered " id="DataTable" >
                                        <thead class="thead-light">
                                        <tr>
                                            <th>STT</th>
                                            <th>Tiêu Đề</th>
                                            <th>Ngày Đăng</th>
                                            <th>Trạng Thái</th>
                                            <th>Hành Động</th>
                                        </tr>
                                        </thead>

                                        <tbody>
                                        <%if(typeof(tindang)!=='undefined' && tindang.length>0){
                                            for(i=0;i<tindang.length;i++){
                                        %>
                                        <tr>
                                            <td><%=i+1%></td>
                                            <td><%=tindang[i].tieuDe%></td>
                                            <td><%=tindang[i].thoiGianDang%></td>
                                            <%if(tindang[i].trangThai=="0"){%>
                                                 <td>đang ẩn</td>
                                            <%}else{%>
                                                 <td>đang hoạt động</td>
                                            <%}%>
                                           
                                            <td><a href="/chitiettd/<%=tindang[i]._id%>" class="btn-add-to-cart">Xem</a>
                                            <br><br>
                                                <%if(tindang[i].trangThai=="0"){%>
                                                    <form  action="/tindang/trangthai/edit" method="post" id="form_trangthaihien">
                                                         <input type="hidden" name="_idTinDang" value="<%=tindang[i]._id%>">
                                                         <input type="hidden" name="trangThai" value="1">
                                                         <a href="javascript:{}" onclick="document.getElementById('form_trangthaihien').submit();" class="btn-add-to-cart">Hiện</a>
                                                    </form>                                                  
                                                <%}else{%>
                                                     <form  action="/tindang/trangthai/edit" method="post" id="form_trangthaian">
                                                         <input type="hidden" name="_idTinDang" value="<%=tindang[i]._id%>">
                                                         <input type="hidden" name="trangThai" value="0">
                                                         <a href="javascript:{}" onclick="document.getElementById('form_trangthaian').submit();" class="btn-add-to-cart">Ẩn</a>
                                                    </form>
                                                <%}%>
                                               <br>
                                                <a href="/tindang/delete/<%=tindang[i]._id%>" class="btn-add-to-cart">Xóa</a>
                                            </td>
                                        </tr>
                                        <%}}%>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                                   
                                            
                                            <!--thông báo-->
                                         
                                            <% if(typeof(mespass)!='undefined')
                                            { %>
                                            <br>
                                            <div class="alert alert-warning">
                                                <b>Oh snap!</b> <%=mespass%>
                                            </div>
                                            <%} %> 
                                    </div>
                                    </div>
                              
                                <!-- Single Tab Content End //end chi tiết tài khoản-->

                                
                               
                            </div>
                        </div>
                        <!-- My Account Tab Content End -->
