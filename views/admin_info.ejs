                                    <h3>Chi Tiết Tài Khoản admin </h3>
                           
                                        <div class="account-details-form">
                                       
                                            
                                        <%if(typeof user!=='undefined'){%>
                                        <!--cơ bản-->
                                        <form action="/admin/info/editbasic" method="post">
                                             <img src="/upload/<%=user[0].avatar%>"  class="img-circle" width="160">
                                            <div class="single-input-item">
                                                <label for="display-name" class="required">Tên Hiển Thị</label>
                                                <input type="text" id="display-name" placeholder="..." value="<%=user[0].name%>" name="name" maxlength=20 required>
                                            </div>

                                            <div class="single-input-item">
                                                <label for="email" class="required">Email </label>
                                                <input type="email" id="email" placeholder="..." value="<%=user[0].email%>" name="email" readonly/>
                                            </div>

                                            <div class="single-input-item">
                                                <label for="email" class="required">Địa Chỉ Liên Hệ </label>
                                                <input type="text" id="email" placeholder="..." value="<%=user[0].diaChi%>" name="diaChi" maxlength=50 required/>
                                            </div>

                                            <div class="single-input-item">
                                                <label for="email" class="required">Số Điện Thoại  </label>
                                                <input type="tel" pattern="[0-9]{9,12}" id="email" placeholder="..." value="<%=user[0].sDT%>" name="sDT"  required/>
                                            </div>

                                            <div class="single-input-item">
                                                <label for="email" class="required">Ngày Sinh  </label>
                                                <input type="date" id="email" placeholder="..." value="<%=user[0].ngaySinh%>" name="ngaySinh"required/>
                                            </div>

                                            <div class="single-input-item">
                                                <label for="email" class="required">Giới Tính  </label>
                                                <select name="gioiTinh">
