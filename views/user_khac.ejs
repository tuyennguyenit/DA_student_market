<!--== Page Content Wrapper Start ==-->
<div id="page-content-wrapper" class="p-9">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- My Account Page Start -->
                <div class="myaccount-page-wrapper">
                    <!-- My Account Tab Menu Start -->
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="myaccount-tab-menu nav" role="tablist">
                               <form action="/info" method="post" id="form_info">
                                        <input type="hidden"name="email_User" value="<%=email_User%>">
                                         <a href="javascript:{}"class="active"onclick="document.getElementById('form_info').submit();" ><i class="fa fa-dashboard"></i>
                                            Thông Tin cá Nhân</a>
                                  </form>
                                   <form id="form_ttcn" action="/info/khac/tindadang" method="post">
                                    <input type="hidden" value="<%=user[0].email%>" name="email_User">
                                    <a href="javascript:{}"  onclick="document.getElementById('form_ttcn').submit();" ><i class="fa fa-cart-arrow-down"></i> Tin Đang Đăng</a>
                                  </form>
                                  
                                  
    
                                   </form>
                                   <form id="form_ttcn1" action="/user/khac/mail" method="post">
                                    <input type="hidden" value="<%=user[0].email%>" name="email_User">
                                    <input type="hidden" value="<%=user[0].id%>" name="id">
                                    <a href="javascript:{}"  onclick="document.getElementById('form_ttcn1').submit();" ><i class="fa fa-cart-arrow-down"></i> Nhắn Tin</a>
                                  </form>
                                  
                                    
                            </div>
                        </div>
                        <!-- My Account Tab Menu End -->

                        <!-- My Account Tab Content Start -->
                        <div class="col-lg-9 mt-5 mt-lg-0">
                            <div class="tab-content" id="myaccountContent">
                                <!-- Single Tab Content Start -->
                                <div class="tab-pane fade show active" id="dashboad" role="tabpanel">
                                    <div class="myaccount-content">
                                    <h3>Chi Tiết Tài Khoản </h3>
                           
                                        <div class="account-details-form">
                                       
                                            
                                        <%if(typeof user!=='undefined'){%>
                                        <!--cơ bản-->
                                            <span class="col-md-4">
                                            </span>
                                            <img src="/upload/<%=user[0].avatar%>" alt="Avatar" style="width:200px; border-radius: 50%">
                                            <br><br>
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-1">
                                                    <form action="/usertheodoi" method="post" id="my_form">
                                                        <input type="hidden" name="id_UserTheoDoi" value="<%=user[0]._id%>">
                                                         <input type="hidden" name="name" value="<%=user[0].name%>">
                                                         <input type="hidden" name="sDT" value="<%=user[0].sDT%>">
                                                         <input type="hidden" name="mail" value="<%=user[0].email%>">
                                                         <input type="hidden" name="id" value="<%=user[0]._id%>">
                                                       
                                                        <a href="javascript:{}" class="btn btn-add-to-cart" onclick="document.getElementById('my_form').submit();"><i class="fa fa-thumbs-up fa-x" ></i>Theo Dõi</a>
                                                    </form>
                                                </div>
                                            </div>
                                                
                                            
                                            <div class="single-input-item">
                                                <label for="display-name" class="required">Tên Hiển Thị</label>
                                                <input type="text" id="display-name" placeholder="..." value="<%=user[0].name%>" readonly/>
                                            </div>

                                            <div class="single-input-item">
                                                <label for="email" class="required">Email </label>
                                                <input type="email" id="email" placeholder="..." value="<%=user[0].email%>"  readonly/>
                                            </div>

                                            <div class="single-input-item">
                                                <label for="email" class="required">Địa Chỉ Liên Hệ </label>
                                                <input type="text" id="email" placeholder="..." value="<%=user[0].diaChi%>" readonly/>
                                            </div>

                                            <div class="single-input-item">
                                                <label for="email" class="required">Số Điện Thoại  </label>
                                                <input type="number" id="email" placeholder="..." value="<%=user[0].sDT%>" readonly/>
                                            </div>

                                            <div class="single-input-item">
                                                <label for="email" class="required">Ngày Sinh  </label>
                                                <input type="text" id="email" placeholder="..." value="<%=user[0].ngaySinh%>" readonly/>
                                            </div>

                                            <div class="single-input-item">
                                                <label for="email" class="required">Giới Tính  </label>
                                                <select name="gioiTinh">
                                                    <%if (user[0].gioiTinh=='1'){%>
                                                    <option value="1" selected> Nam</option>
                                                    <option value="2">Nữ</option>
                                                    <%}else{%>
                                                    <option value="1" > Nam</option>
                                                    <option value="2" selected>Nữ</option>
                                                    <%}%>
                                                </select>
                                                
                                            </div>
                                          
                                        
                                            <%}%>
                                            
                                    </div>
                                    </div>
                                </div>
                                <!-- Single Tab Content End //end chi tiết tài khoản-->

                            
                            </div>
                        </div>
                        <!-- My Account Tab Content End -->
                    </div>
                </div>
                <!-- My Account Page End -->
            </div>
