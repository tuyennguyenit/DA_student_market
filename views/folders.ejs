<div class="container">
  <h3>Folders  <button type="button" data-toggle="modal" data-target="#createFolderModal" class="btn btn-primary pull-right"><span class="glyphicon glyphicon-plus"></span> Create Folder</button></h3>

<div class="container">
<table class="table table-striped" id="folderDataTable">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Describe</th>
      <th>Created On</th>
      <th>Status</th>
    </tr>
  </thead>
 <tbody>
 <% for(i=0;i< folders.length; i++) 
 {%>
   <tr>
     <td><%=i+1%></td>
     
     <td><p><%=folders[i].name%></p></td>
     <td><p><%=folders[i].describe%></p></td>
     <td><p><%=folders[i].created%></p></td>

     

     <td>
        <a href="/folders/<%=folders[i].name%>"><button class="btn btn-success btn-xs"><i class="fa fa-check"></i></button></a>
        <a href="" data-toggle="modal" data-target="#editFolderModal<%=folders[i].name%>"><button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button></a>
        <a href="/folders/delete/<%=folders[i].name%>" onclick="return confirm('Are you sure you want to delete this item?');"><button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button></a>
       
     </td>
   </tr>
 
  <!--edit Fodler Modal -->
<div class="modal fade" id="editFolderModal<%=folders[i].name%>" role="dialog">
<div class="modal-dialog">

  <!-- Modal content-->
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Edit Folder</h4>
    </div>
    <div class="modal-body">
      <form action="/folders/edit" method="get" role="form">
<div class="form-group">

<div class="form-group">
<label for="name">Folder Name </label>
<input type="text" class="form-control" id="name" value= <%=folders[i].name%> name="folderName" readonly>
</div>

<div class="form-group">
<label for="name">Folder describe </label>
<input type="text" class="form-control" id="name" name="folderDescribe"  value= <%=folders[i].describe%> >
</div>

<button type="submit" class="btn btn-default">edit</button>
</form>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>
  
</div>
</div>

</div>

<%} %>
</tbody>
</table></div>




  <!--Create Fodler Modal -->
  <div class="modal fade" id="createFolderModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Create Folder</h4>
        
        </div>
        <div class="modal-body">
          <form action="/folders" method="POST" role="form">
  <div class="form-group">
    <label for="name">Folder Name</label>
    <input type="text" class="form-control" id="name" name="folderName">
  </div>
  <div class="form-group">
  <label for="name">Folder describe </label>
  <input type="text" class="form-control" id="name" name="folderDescribe">
</div>

  <button type="submit" class="btn btn-default">Create</button>
</form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
  </div>

</div>


