                                <!-- Single Tab Content Start -->
                                <div class="tab-pane fade show active" id="dashboad" role="tabpanel">
                                    <div class="myaccount-content">
                                 
                           
                                        <div class="account-details-form">
                                            <!--nội dung-->
                                            
                                            <% if(typeof lst_DMCon_R !== 'undefined'){%>
                                                <h3 style="color:red">quản lý danh mục con</h3>
                                                <a href="cart.html" class="btn-add-to-cart" data-toggle="modal" data-target="#modalTaoMoi">Tạo Mới</a>
                                                    <% if(typeof mes_DMCon_C !=='undefined'){%>
                                                    <div><%=mes_DMCon_C%></div>
                                                    <%}%>
                                                <br><br><br>
                                                <div class="cart-table table-responsive">
                                                  <table class="table table-bordered" id="table_1">
                                                        <thead>
                                                            <tr>
                                                                <th class="pro-thumbnail">STT</th>
                                                                <th class="pro-title">Tên Danh Mục Con</th>
                                                                <th class="pro-title">Tên Danh Mục Cha</th>
                                                            
                                                                <th class="pro-edit">edit</th>
                                                                <th class="pro-remove">Remove</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                        <%   for(i=0;i<lst_DMCon_R.length;i++){%>
                                                   
                                                      
                                                    
                                                        <tr>
                                                                <td class="pro-title"><a href="#"><%=i+1%></a></td>                                                             
                                                                <td class="pro-quantity"><span class="text-success"><%=lst_DMCon_R[i].tenDMCon%></span></td>
                                                                <td class="pro-quantity"><span class="text-success"><%=lst_DMCon_R[i].tenDMCha%></span></td>
                                                               
                                                                <td class="pro-edit"><a href=""  data-toggle="modal" data-target="#modalEdit<%=i+1%>"><i class="fa fa-edit"></i></a></td>
                                                                <td class="pro-remove"><a href="/dmcon/delete/<%=lst_DMCon_R[i]._id%>"><i class="fa fa-trash-o"></i></a></td>
                                                        </tr>

                                                                <!--modal edit-->
                                                                <div class="modal" id="modalEdit<%=i+1%>">
                                                                    <div class="modal-dialog">
                                                                        <div class="modal-content">

                                                                            <!-- Modal Header -->
                                                                            <div class="modal-header">
                                                                            <h4 class="modal-title">Chỉnh Sửa Danh Mục Con</h4>
                                                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                            </div>

                                                                            <!-- Modal body -->
                                                                            <div class="modal-body">
                                                                               
                                                                                <form action="/dmcon/edit" method="post">
                                                                                    <div class="form-group">
                                                                                        <label for="usr">Tên danh Mục Con:</label>
                                                                                        <input type="text" class="form-control" name="tenDMCon" value="<%=lst_DMCon_R[i].tenDMCon%>">
                                                                                    </div>
                                                                                  
                                                                                   <input type="hidden" name="id_DMCon" value="<%=lst_DMCon_R[i]._id%>"> 
                                                                                    <input type="submit" value="Lưu Lại" class="form-control btn btn-success">
                                                                                </form>

                                                                            </div>

                                                                            <!-- Modal footer -->
                                                                            <div class="modal-footer">
                                                                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                                                        </div>

                                                                    </div>
                                                                </div>
                                                      <%}}%>
                                                            
                                                        </tbody>
                                                    </table>  
                                                </div>    
                                                    
                                           

                                            

                                     
                                    </div>
                                    </div>
                                </div>
                                <!-- Single Tab Content End //end chi tiết tài khoản-->
