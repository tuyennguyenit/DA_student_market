                                                <input type="submit" value="Tạo Mới"  class="form-control btn btn-success">
                                            </form>
                                            </div>

                                            <!-- Modal footer -->
                                            <div class="modal-footer">
                                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                            </div>

                                        </div>
